<style>
  p {
    margin: 0;
    padding: 0;
    line-height: 1;
  }
  ul {
    margin: 0;
    padding: 0;
  }
  li {
    list-style: none;
  }
  .v1-info {
    background-color: #fff;
  }
  .v1-info-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    padding: 0 calc(100vw * 20 / var(--base-width));
    padding-top: calc(100vw * 100 / var(--base-width));
    padding-bottom: calc(100vw * 126 / var(--base-width));
  }
  .info-img {
    max-width: calc(100vw * 435 / var(--base-width));
    border-radius: 8px;
    overflow: hidden;
  }
  .info-wrapper {
    max-width: calc(100vw * 805 / var(--base-width));
  }
  p.info-text {
    color: #0d0d0d;
    font-size: calc(100vw * 18 / var(--base-width));
    line-height: calc(100vw * 24 / var(--base-width));
    font-weight: 400;
  }
  .info-text-1,
  .info-text-2,
  .info-text-3,
  .info-ul-box {
    margin-bottom: calc(100vw * 30 / var(--base-width));
  }
  li.li-item {
    padding: calc(100vw * 15 / var(--base-width)) 0;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 0.4px solid rgba(13, 13, 13, 0.3);
    position: relative;
  }

  li.li-item span {
    position: relative;
    white-space: nowrap;
    color: #3d3d3d;
    font-size: calc(100vw * 14 / var(--base-width));
    line-height: calc(100vw * 12 / var(--base-width));
    margin-right: calc(100vw * 65 / var(--base-width));
    padding-left: calc(100vw * 15 / var(--base-width));
  }
  li.li-item span::before {
    content: '';
    width: 9px;
    height: 9px;
    color: #0522cb;
    background-color: #0522cb;
    border-radius: 9px;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }
  li.li-item p {
    color: #0d0d0d;
    font-size: calc(100vw * 16 / var(--base-width));
    line-height: calc(100vw * 22 / var(--base-width));
  }
  @media screen and (max-width: 1200px) {
    .info-text-1,
    .info-text-2,
    .info-text-3,
    .info-ul-box {
      margin-bottom: calc(100vw * 15 / var(--base-width));
    }
    p.info-text {
      font-size: calc(100vw * 16 / var(--base-width));
      line-height: calc(100vw * 18 / var(--base-width));
    }
    li.li-item p {
      font-size: calc(100vw * 16 / var(--base-width));
      line-height: calc(100vw * 18 / var(--base-width));
    }
    .v1-info-content {
      column-gap: calc(100vw * 40 / var(--base-width));
    }
    .info-img {
      max-width: calc(100vw * 380 / var(--base-width));
    }
    .info-wrapper {
      max-width: calc(100vw * 630 / var(--base-width));
    }
  }
  @media screen and (max-width: 1024px) {
  }
  @media screen and (max-width: 750px) {
    .v1-info-content {
      flex-direction: column;
      column-gap: 0;
    }
    .info-wrapper {
      margin-top: calc(100vw * 70 / var(--base-width));
      max-width: 100%;
    }
    .info-img {
      max-width: 100%;
    }
    .info-text-1,
    .info-text-2,
    .info-text-3,
    .info-ul-box {
      margin-bottom: calc(100vw * 30 / var(--base-width));
    }
    p.info-text {
      font-size: calc(100vw * 30 / var(--base-width));
      line-height: calc(100vw * 36 / var(--base-width));
    }
    li.li-item {
      align-items: flex-start;
    }
    li.li-item span {
      font-size: calc(100vw * 24 / var(--base-width));
      line-height: calc(100vw * 24 / var(--base-width));
      margin-right: calc(100vw * 20 / var(--base-width));
      padding-left: calc(100vw * 22 / var(--base-width));
    }
    li.li-item span::before {
      width: calc(100vw * 12 / var(--base-width));
      height: calc(100vw * 12 / var(--base-width));
    }
    li.li-item p {
      font-size: calc(100vw * 30 / var(--base-width));
      line-height: calc(100vw * 32 / var(--base-width));
    }
    .info-ul-box {
      margin-top: calc(100vw * 90 / var(--base-width));
      margin-bottom: calc(100vw * 70 / var(--base-width));
    }
  }
</style>
<div class="v1-info">
  <div class="v1-info-content">
    <div class="info-img">
      <picture>
        <source media="(max-width: 767px)" srcset="{{ section.settings.info_img_mb | image_url: width: master }}">
        <source media="(min-width: 768px)" srcset="{{ section.settings.info_img | image_url: width: master }}">
        <img src="{{ section.settings.info_img | image_url: width: master }}" alt="">
      </picture>
    </div>
    <div class="info-wrapper">
      <p class="info-text info-text-1">{{ section.settings.info_text_1 }}</p>
      <p class="info-text info-text-2">{{ section.settings.info_text_2 }}</p>
      <p class="info-text info-text-3">{{ section.settings.info_text_3 }}</p>
      <div class="info-ul-box">
        <ul class="info-ul">
          {% for block in section.blocks %}
            <li class="li-item">
              <span>{{ block.settings.desc_num }}</span>
              <p>{{ block.settings.desc_text }}</p>
            </li>
          {% endfor %}
        </ul>
      </div>
      <p class="info-text info-text-4">{{ section.settings.info_text_4 }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "V1 Info",
  "settings": [
    {
      "type": "image_picker",
      "id": "info_img",
      "label": "PC Image"
    },
    {
      "type": "image_picker",
      "id": "info_img_mb",
      "label": "Mobile Image"
    },
    {
      "type": "textarea",
      "id": "info_text_1",
      "label": "Info 1"
    },
    {
      "type": "textarea",
      "id": "info_text_2",
      "label": "Info 2"
    },
    {
      "type": "textarea",
      "id": "info_text_3",
      "label": "Info 3"
    },
    {
      "type": "textarea",
      "id": "info_text_4",
      "label": "Info 4"
    }
  ],
  "blocks": [
    {
      "type": "desc",
      "name": "Desc",
      "settings": [
        {
          "type": "text",
          "id": "desc_num",
          "label": "Desc No.",
          "default": "A01"
        },
        {
          "type": "richtext",
          "id": "desc_text",
          "label": "Desc Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "V1 Info"
    }
  ]
}
{% endschema %}
