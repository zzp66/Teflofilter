{%- liquid
	assign share_facebook = settings.social_share_facebook
	assign share_twitter = settings.social_share_twitter
	assign share_pinterest = settings.social_share_pinterest
	assign share_whatsapp = settings.social_share_whatsapp
	assign share_clipboard = settings.social_share_clipboard
-%}
<social-share class="share-article" {{ block.shopify_attributes }}>
	{%- if share_label -%}
	<label>{{ 'blogs.article.share' | t }}</label>
	{%- endif -%}
  {%- if share_facebook -%}
  <a href="http://www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="facebook social" title="Facebook">{% render 'svg-icons' with 'facebook' %}</a>
  {%- endif %}
  {%- if share_twitter -%}
  <a href="https://twitter.com/intent/tweet?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="twitter social" title="X">{% render 'svg-icons' with 'twitter' %}</a>
  {%- endif %}
  {%- if share_pinterest -%}
  <a href="http://pinterest.com/pin/create/link/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | image_url: width: 1024, height: 1024 }}&amp;description={{ share_title | url_param_escape }}" class="pinterest social" data-pin-no-hover="true" title="Pinterest">{% render 'svg-icons' with 'pinterest' %}</a>
  {%- endif -%}
  {%- if share_whatsapp -%}
  <a href="whatsapp://send?text={{ share_title | url_param_escape }}, {{ shop.url | append: share_permalink }}" class="whatsapp social" aria-label="{{ 'social.links.whatsapp' | t }}"  data-action="share/whatsapp/share">{% render 'svg-icons' with 'whatsapp' %}</a>
  {%- endif -%}
  {%- if share_clipboard -%}
  <button class="clipboard social"><span class="clipboard--bubble">{{ 'social.copied_to_clipboard' | t }}</span>{% render 'svg-icons' with 'clipboard' %}</button>
  {%- endif -%}
</social-share>
<script src="{{ 'social-share.js' | asset_url }}" defer="defer"></script>

