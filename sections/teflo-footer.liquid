        }
    }
    .teflo-footer-btm-lt-desc{
        display: flex;

    }
    .teflo-footer-btm-lt-desc-p{
        color:{{ section.settings.footer_font_color }};
        opacity: 0.5;
        font-size: calc(100vw * 14 / var(--base-width));
        font-style: normal;
        font-weight: 300;
        line-height: calc(100vw * 16 / var(--base-width));
        margin-right: calc(100vw * 60 / var(--base-width));

    }
    .teflo-footer-btm-lt-desc-p:hover{
        color: {{ section.settings.footer_font_hover_color }};
    }
    .teflo-footer-btm-rt-icons{
        display: flex;
        
    }
    .teflo-footer-btm-rt-copyright{
        color:{{ section.settings.footer_font_color }};
        font-size: calc(100vw * 14 / var(--base-width));
        font-style: normal;
        font-weight: 300;
        line-height: calc(100vw * 16 / var(--base-width));
        opacity: 0.5;
    }
    .teflo-footer-btm-rt-copyright p{
        margin-bottom: 0;
    }
    .teflo-footer-btm-rt-icons-icon{
        width: calc(100vw * 33 / var(--base-width));
    }
    .teflo-footer-btm-rt-icons-a{
        margin-right: calc(100vw * 13 / var(--base-width));
    }
