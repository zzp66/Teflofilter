    "name": "Teflo Factory",
    "class": "index-section",
    "settings": [
        {
            "type": "text",
            "id": "subtitle",
            "label": "subtitle"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "desc",
            "label": "desc"
        },
        {
            "type": "image_picker",
            "id": "image_pc",
            "label": "Image PC"
        },
        {
            "type": "image_picker",
            "id": "image_h5",
            "label": "Image H5"
        },
        {
            "type": "text",
            "id": "image_alt",
            "label": "Image Alt"
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "info item",
            "settings": [
                {
                    "type": "text",
                    "id": "num",
                    "label": "Num"
                },
                {
                    "type": "text",
                    "id": "unit",
                    "label": "unit"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "richtext",
                    "id": "desc",
                    "label": "Desc"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Teflo",
            "name": "Teflo Factory",
            "settings": {
               
            },
        }
    ]
}
{% endschema %}