        margin-top: calc(100vw * 140 / var(--base-width));
    }
    .teflo-footer-btm-lt-title-img{
        width: calc(100vw * 780 / var(--base-width));
        flex-shrink: 0;
  
    }
    @media (max-width: 1300px){
        .teflo-footer-btm-lt-title-img{
